<div class="sizes-wrap">
  <div class="copy">
    <div class="copy-wrap">
    <h2>{{ section.settings.title }}</h2>
      <ul>
        {% for block in section.blocks %}
        <li>
          {{ block.settings.title }}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="image">
<!--     <img src="{{ section.settings.image | img_url: '1200x900', crop: 'center' }}"> -->
    <video class="{% if section.settings.video_url_mobile != blank %}desktop{% endif %}" src="{{ section.settings.video_url }}" autoplay="" loop="" muted="" preload="" playsinline="" data-autoplay="" data-keepplaying=""></video>
    {% if section.settings.video_url_mobile != blank %}
      <video class="mobile" src="{{ section.settings.video_url_mobile }}" autoplay="" loop="" muted="" preload="" playsinline="" data-autoplay="" data-keepplaying=""></video>
    {% endif %}
  </div>  
</div>

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
</style>

{% schema %}
  {
    "name": "Features",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Compact Edition Features"
        },
		{
			"type": "url",
			"id": "video_url",
			"label": "Video"
		},
		{
			"type": "url",
			"id": "video_url_mobile",
			"label": "Video - Mobile"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background Color",
			"default": "#FFF"
		}
	],
	"blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Feature",
                "default": "Feature Name"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description"
            }
        ]
      }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

