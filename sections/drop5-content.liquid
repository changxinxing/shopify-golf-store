<div id="drop5" class="drop5-content">
<div class="page-width">
  <div class="grid copy-wrap">
    <div class="grid__item">
      <h3>{{ section.settings.title }}</h3>
    </div>
    <div class="grid__item">
      {{ page.content }}      
    </div>
  </div>
  <div class="videos-wrap">
  {% for block in section.blocks %}
    {% if block.type == 'video' %}
    {% capture odd %}{{ forloop.index | modulo: 2 }}{% endcapture %}    
    <div class="video-wrapper{% if forloop.last == true and odd == '1' %} {{ odd }} medium-up--push-one-quarter{% endif %}">
      <iframe src="//player.vimeo.com/video/{{ block.settings.video_url.id }}?byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
    </div>
    {% endif %}
  {% endfor %}
  </div>
  

  
</div>

  
